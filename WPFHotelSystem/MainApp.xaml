<Window x:Class="WPFHotelSystem.MainApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHotelSystem"
        mc:Ignorable="d"
        Title="MainApp" Height="450" Width="800">
    <Grid Background="#FF2C3E50">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="224">
            <Label Content="Nazwisko:" Foreground="White"  FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="0,5" FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
            <Label Content="Hasło:" Foreground="White" Margin="0,10"  FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
            <PasswordBox x:Name="txtPassword" Width="200" FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
            <Button Cursor="Hand"  Content="Zaloguj się" Width="100" Height="30" Margin="0,10" Background="#FF3D6A88" Foreground="White" Click="Login_Click" FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
